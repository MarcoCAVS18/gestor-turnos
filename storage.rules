rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Profile photos - SECURED with size, type, and count validation
    // Each user limited to 1 file (profile photo) â€” no subdirectories
    match /profile-photos/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*') // Only images
                    && fileName.matches('^[a-zA-Z0-9._-]{1,100}\\.(jpg|jpeg|png|gif|webp)$'); // Valid extensions, no path traversal
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*')
                    && fileName.matches('^[a-zA-Z0-9._-]{1,100}\\.(jpg|jpeg|png|gif|webp)$');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to assets (logos, icons, etc.)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins via console
    }

  }
}
