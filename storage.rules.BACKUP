rules_version = '2';

service firebase.storage {
  // match /b/{bucket}/o is the required entry point for Storage rules
  match /b/{bucket}/o {

    // Grant read/write access to authenticated users for their profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to assets (no authentication required)
    match /assets/{allPaths=**} {
      allow read: if true;
    }
    
  }
}